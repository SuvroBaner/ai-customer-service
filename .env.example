# Application Settings
ENVIRONMENT=development
APP_NAME=ai-customer-service
DEBUG=true
LOG_LEVEL=INFO

# API Server
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# AI/ML API Keys
ANTHROPIC_API_KEY=sk-ant-xxxxx
OPENAI_API_KEY=sk-xxxxx

# Vector Database (Pinecone)
PINECONE_API_KEY=xxxxx
PINECONE_ENVIRONMENT=us-west1-gcp
PINECONE_INDEX_NAME=customer-service-kb

# PostgreSQL Database
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/customer_service
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis (State Management & Caching)
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=10

# LLM Configuration
DEFAULT_LLM_MODEL=claude-sonnet-4-20250514
DEFAULT_LLM_TEMPERATURE=0.7
DEFAULT_LLM_MAX_TOKENS=1000

# Embeddings
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSION=1536

# Knowledge Base
KB_TOP_K_RESULTS=5
KB_SIMILARITY_THRESHOLD=0.7

# Agent Configuration
ENABLE_ESCALATION=true
ESCALATION_CONFIDENCE_THRESHOLD=0.8
MAX_RESOLUTION_ATTEMPTS=3

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Monitoring & Observability
ENABLE_METRICS=true
METRICS_PORT=9090

# External Integrations (Optional)
# CRM_API_KEY=xxxxx
# ZENDESK_API_KEY=xxxxx
# ZENDESK_SUBDOMAIN=yourcompany
# SENDGRID_API_KEY=xxxxx

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000